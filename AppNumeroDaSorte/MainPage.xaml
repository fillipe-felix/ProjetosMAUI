<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    BackgroundColor="White"
    x:Class="AppNumeroDaSorte.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Image
            HeightRequest="115"
            Source="logo_green.png"
            WidthRequest="74" />

        <Label
            HorizontalOptions="Center"
            Margin="0,20,0,120"
            Text="Número da sorte"
            TextColor="#00AB37"
            VerticalOptions="Center" />

        <Button HorizontalOptions="Center" Text="Gerar número da sorte" />
    </VerticalStackLayout>
</ContentPage>