<?xml version="1.0" encoding="utf-8" ?>

<FlyoutPage
    FlyoutLayoutBehavior="Popover"
    x:Class="AppMAUIGallery.AppFlyout"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:pages="clr-namespace:AppMAUIGallery.Views"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <FlyoutPage.Flyout>
        <pages:Menu />
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <pages:MainPage />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>