            <!--  With Borders (Frame)  -->
            <Label
                FontAttributes="Bold"
                FontSize="18"
                Text="With Borders" />
            <VerticalStackLayout Spacing="10">
                <Frame
                    BorderColor="LightGray"
                    CornerRadius="8"
                    Padding="10">
                    <RadioButton Content="Bordered RadioButton 1" GroupName="BorderGroup" />
                </Frame>
                <Frame
                    BorderColor="LightGray"
                    CornerRadius="8"
                    Padding="10">
                    <RadioButton Content="Bordered RadioButton 2" GroupName="BorderGroup" />
                </Frame>
            </VerticalStackLayout>

            <!--  With Images  -->
            <Label
                FontAttributes="Bold"
                FontSize="18"
                Text="With Images" />
            <HorizontalStackLayout Spacing="15">
                <VerticalStackLayout>
                    <RadioButton GroupName="ImageGroup" />
                    <Image
                        HeightRequest="40"
                        Source="poweron.png"
                        WidthRequest="40" />
                    <Label HorizontalOptions="Center" Text=".NET" />
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <RadioButton GroupName="ImageGroup" />
                    <Image
                        HeightRequest="40"
                        Source="poweroff.png"
                        WidthRequest="40" />
                    <Label HorizontalOptions="Center" Text="Xamarin" />
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <!--  RadioButtons with Custom Handlers  -->
            <Label
                FontAttributes="Bold"
                FontSize="18"
                Text="With Event Handlers" />
            <HorizontalStackLayout Spacing="15">
                <RadioButton
                    CheckedChanged="OnRadioButtonCheckedChanged"
                    Content="Click Me"
                    GroupName="EventGroup" />
                <Label
                    Text="Status: Not selected"
                    VerticalOptions="Center"
                    x:Name="eventResultLabel" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
