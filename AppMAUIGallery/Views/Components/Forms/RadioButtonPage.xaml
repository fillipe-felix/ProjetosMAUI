<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    BackgroundColor="White"
    x:Class="AppMAUIGallery.Views.Components.Forms.RadioButtonPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Margin="0,0,0,20"
                Text="RadioButton Customization Examples" />

            <!--  Basic RadioButton Group  -->
            <Label
                FontAttributes="Bold"
                FontSize="18"
                Text="Basic RadioButton Group" />
            <HorizontalStackLayout Spacing="15">
                <RadioButton Content="Option 1" GroupName="BasicGroup" />
                <RadioButton
                    Content="Option 2"
                    GroupName="BasicGroup"
                    IsChecked="True" />
                <RadioButton Content="Option 3" GroupName="BasicGroup" />
            </HorizontalStackLayout>

            <!--  Custom Colors  -->
            <Label
                FontAttributes="Bold"
                FontSize="18"
                Text="Custom Colors" />
            <VerticalStackLayout Spacing="10">
                <RadioButton
                    BorderColor="Red"
                    Content="Red RadioButton"
                    GroupName="ColorGroup"
                    TextColor="Red" />
                <RadioButton
                    BorderColor="Blue"
                    Content="Blue RadioButton"
                    GroupName="ColorGroup"
                    TextColor="Blue" />
                <RadioButton
                    BorderColor="Green"
                    Content="Green RadioButton"
                    GroupName="ColorGroup"
                    TextColor="Green" />
            </VerticalStackLayout>

            <!--  Custom Sizes  -->
            <Label
                FontAttributes="Bold"
                FontSize="18"
                Text="Custom Sizes" />
            <HorizontalStackLayout Spacing="15">
                <RadioButton
                    BorderColor="Red"
                    Content="Small"
                    GroupName="SizeGroup"
                    Scale="0.8" />
                <RadioButton Content="Normal" GroupName="SizeGroup" />
                <RadioButton
                    Content="Large"
                    GroupName="SizeGroup"
                    Scale="1.5" />
            </HorizontalStackLayout>

            <!--  Custom Alignment  -->
            <Label
                FontAttributes="Bold"
                FontSize="18"
                Text="Custom Alignment" />
            <VerticalStackLayout Spacing="10">
                <RadioButton Content="Left Aligned (Default)" GroupName="AlignmentGroup" />
                <RadioButton
                    Content="Right Aligned"
                    GroupName="AlignmentGroup"
                    HorizontalOptions="End" />
                <RadioButton
                    Content="Center Aligned"
                    GroupName="AlignmentGroup"
                    HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!--  Disabled State  -->
            <Label
                FontAttributes="Bold"
                FontSize="18"
                Text="Disabled RadioButtons" />
            <HorizontalStackLayout Spacing="15">
                <RadioButton Content="Enabled" GroupName="StateGroup" />
                <RadioButton
                    Content="Disabled"
                    GroupName="StateGroup"
                    IsEnabled="False" />
                <RadioButton
                    Content="Disabled Checked"
                    GroupName="StateGroup"
                    IsChecked="True"
                    IsEnabled="False" />
            </HorizontalStackLayout>

