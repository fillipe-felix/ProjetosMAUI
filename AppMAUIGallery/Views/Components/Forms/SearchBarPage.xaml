<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    BackgroundColor="Gray"
    x:Class="AppMAUIGallery.Views.Components.Forms.SearchBarPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="DatePicker Customizations" />

            <!--  Exemplo 1: DatePicker Básico com Borda  -->
            <Border
                Stroke="Blue"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <DatePicker
                    DateSelected="OnDateSelected"
                    Format="dd/MM/yyyy"
                    Margin="10"
                    x:Name="basicDatePicker" />
            </Border>

            <!--  Exemplo 2: DatePicker com Gradiente  -->
            <Border StrokeShape="RoundRectangle 15" StrokeThickness="1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                        <GradientStop Color="LightBlue" Offset="0.1" />
                        <GradientStop Color="LightPink" Offset="0.9" />
                    </LinearGradientBrush>
                </Border.Background>
                <DatePicker
                    BackgroundColor="Transparent"
                    DateSelected="OnDateSelected"
                    Format="MMMM dd, yyyy"
                    Margin="10"
                    x:Name="gradientDatePicker" />
            </Border>

            <!--  Exemplo 3: DatePicker com Ícone  -->
            <Border
                BackgroundColor="White"
                Stroke="DarkGray"
                StrokeShape="RoundRectangle 8"
                StrokeThickness="1">
                <Grid ColumnDefinitions="Auto, *" Padding="5">
                    <Image
                        HeightRequest="24"
                        Margin="5,0,0,0"
                        Source="dotnet_bot.png"
                        VerticalOptions="Center"
                        WidthRequest="24" />
                    <DatePicker
                        DateSelected="OnDateSelected"
                        Format="dd/MM/yyyy"
                        Grid.Column="1"
                        Margin="5"
                        MaximumDate="{Binding MaxDate}"
                        MinimumDate="{Binding MinDate}"
                        x:Name="iconDatePicker" />
                </Grid>
            </Border>

            <!--  Exemplo 4: DatePicker com Efeito de Sombra  -->
            <Border BackgroundColor="White" StrokeShape="RoundRectangle 10">
                <Border.Shadow>
                    <Shadow
                        Brush="Black"
                        Offset="3,3"
                        Opacity="0.5"
                        Radius="10" />
                </Border.Shadow>
                <DatePicker
                    BackgroundColor="Transparent"
                    DateSelected="OnDateSelected"
                    Format="yyyy-MM-dd"
                    Margin="10"
                    x:Name="shadowDatePicker" />
            </Border>

            <!--  Exemplo 5: DatePicker com Validação Visual  -->
            <Border
                Stroke="Gray"
                StrokeShape="RoundRectangle 8"
                StrokeThickness="1"
                x:Name="validationBorder">
                <Grid RowDefinitions="Auto,Auto">
                    <DatePicker
                        DateSelected="OnValidationDateSelected"
                        Format="dd/MM/yyyy"
                        Margin="10"
                        x:Name="validationDatePicker" />
                    <Label
                        FontSize="12"
                        Grid.Row="1"
                        IsVisible="False"
                        Margin="10,0,10,5"
                        TextColor="Red"
                        x:Name="validationMessage" />
                </Grid>
            </Border>

            <!--  Exemplo 6: DatePicker com Custom Renderer (Estilo Material Design)  -->
            <VerticalStackLayout Spacing="5">
                <Label
                    FontSize="12"
                    Margin="12,0,0,0"
                    Text="Data de Nascimento"
                    TextColor="#6200EE" />
                <Border
                    Stroke="#6200EE"
                    StrokeShape="RoundRectangle 4"
                    StrokeThickness="2">
                    <DatePicker
                        DateSelected="OnDateSelected"
                        Format="dd/MM/yyyy"
                        Margin="10"
                        x:Name="materialDatePicker" />
                </Border>
            </VerticalStackLayout>

            <!--  Exemplo 7: DatePicker com Picker Custom  -->
            <Border
                Stroke="{AppThemeBinding Light=Black,
                                         Dark=White}"
                StrokeShape="RoundRectangle 20"
                StrokeThickness="1">
                <Grid ColumnDefinitions="*,Auto" Padding="5">
                    <Label
                        Margin="10,0,0,0"
                        Text="Selecione uma data"
                        VerticalOptions="Center"
                        x:Name="customPickerLabel" />
                    <Button
                        Clicked="OnCustomPickerClicked"
                        CornerRadius="20"
                        Grid.Column="1"
                        HeightRequest="40"
                        Text="Abrir"
                        WidthRequest="80" />
                </Grid>
            </Border>

            <!--  Exemplo 8: DatePicker com Limite de Faixa Etária  -->
            <Border
                Stroke="#FF6347"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="1.5">
                <VerticalStackLayout Padding="10" Spacing="5">
                    <Label FontSize="14" Text="Data de Nascimento (18+)" />
                    <DatePicker
                        DateSelected="OnAgeLimitDateSelected"
                        Format="D"
                        MaximumDate="{Binding AgeLimit}"
                        x:Name="ageLimitDatePicker" />
                    <Label
                        IsVisible="false"
                        TextColor="Red"
                        x:Name="ageMessage" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>