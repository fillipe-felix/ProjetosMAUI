<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    BackgroundColor="Gray"
    Title="Exemplos de TimePicker"
    x:Class="AppMAUIGallery.Views.Components.Forms.TimePickerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="Customizações de TimePicker" />

            <!--  TimePicker Básico  -->
            <Border
                Padding="10"
                Stroke="LightGray"
                StrokeShape="RoundRectangle 8">
                <VerticalStackLayout Spacing="10">
                    <Label FontAttributes="Bold" Text="TimePicker Básico" />
                    <TimePicker Time="13:30:00" x:Name="basicTimePicker" />
                    <Label Text="Hora selecionada: 13:30:00" x:Name="basicTimePickerResult" />
                </VerticalStackLayout>
            </Border>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>