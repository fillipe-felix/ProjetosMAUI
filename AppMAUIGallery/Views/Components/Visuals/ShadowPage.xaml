<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    BackgroundColor="White"
    x:Class="AppMAUIGallery.Views.Components.Visuals.ShadowPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout Padding="15" Spacing="50">
        <Border BackgroundColor="White" Padding="10">
            <Border.Shadow>
                <Shadow
                    Brush="Red"
                    Opacity="1"
                    Radius="30" />
            </Border.Shadow>
            <VerticalStackLayout>
                <Label
                    HorizontalOptions="Center"
                    Text="Bem vindo"
                    VerticalOptions="Center" />
            </VerticalStackLayout>
        </Border>

        <Border BackgroundColor="White" Padding="10">
            <Border.Shadow>
                <Shadow
                    Brush="Red"
                    Offset="10,10"
                    Opacity="1"
                    Radius="30" />
            </Border.Shadow>
            <VerticalStackLayout>
                <Label
                    HorizontalOptions="Center"
                    Text="Bem vindo"
                    VerticalOptions="Center" />
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>