<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    BackgroundColor="White"
    x:Class="AppMAUIGallery.Views.Components.Mains.BoxViewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout Padding="10">
        <BoxView BackgroundColor="Blue" HeightRequest="3" />

        <BoxView
            BackgroundColor="Green"
            HeightRequest="100"
            WidthRequest="100" />

        <BoxView
            BackgroundColor="Red"
            CornerRadius="50"
            HeightRequest="100"
            WidthRequest="100" />

        <BoxView
            BackgroundColor="Black"
            HeightRequest="200"
            WidthRequest="100" />
    </VerticalStackLayout>
</ContentPage>